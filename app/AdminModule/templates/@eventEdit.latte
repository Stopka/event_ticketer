{layout '@layout.latte'}
{block content}
    <h1 n:if="$event"><i class="fa fa-calendar-o"></i> {_'Entity.Event.Event'} <em>{$event->getName()}</em></h1>
    <h1 n:if="!$event"><i class="fa fa-calendar-o"></i> {_'Entity.Event.Event'}</h1>
    {var $eventId = $event?$event->getId():null }
    <div class="nav-tabs">
        <ul>
            <li n:class="$presenter->isLinkCurrent('Event:edit')?active">
                <a n:href="Event:edit,$eventId">
                    <span n:if="$event"><i class="fa fa-pencil"></i> {_'Presenter.Admin.Event.Edit.H1'}</span>
                    <span n:if="!$event"><i class="fa fa-plus-circle"></i> {_'Presenter.Admin.Event.Add.H1'}</span>
                </a>
            </li>
            <li n:class="$presenter->isLinkCurrent('Addition:default')?active, !$event?disabled">
                <a n:href="Addition:default,$eventId">
                    <span><i class="fa fa-archive"></i> {_'Entity.Addition.Additions'}</span>
                </a>
            </li>
        </ul>
    </div>

    {include subcontent}